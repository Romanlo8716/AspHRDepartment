@model Laba1.Models.Worker

@{
    ViewData["Title"] = "AddMilitary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создание отчета по отпускам</h1>
<h3>Выберите промежуток дат</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetReportVacation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label  class="control-label">Начальная дата</label>
                <input type="date" name="dateStartPost" class="form-control" />
               
            </div>

            <div class="form-group">
                <label class="control-label">Конечная дата</label>
                <input type="date" name="dateEndPost" class="form-control" />
               
            </div>
         

         
            <div class="form-group">
                <input type="submit" value="Внести" style="margin-top: 20px" class="btn btn-primary" />
            </div>
        </form>
        <form asp-action="GetReportVacationAll">
            <div class="form-group" style="margin-left: 100px; margin-top:-58px">
                <input type="submit" value="Полный отчет" style="margin-top: 20px" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <div>
        <a asp-controller="Workers" asp-action="Index">Вернуться назад</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
