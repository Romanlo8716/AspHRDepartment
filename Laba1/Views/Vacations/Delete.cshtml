@model Laba1.Models.Vacation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить данную запись?</h3>
<div>
    <h4>Данные отпусков</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dateStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dateEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateEnd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.typeVacation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.typeVacation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Worker)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Surname @ViewBag.Name @ViewBag.Middlename
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@ViewBag.WorkerId">Вернуться назад</a>
    </form>
</div>
