    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dateRecord)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateRecord)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nameWork)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nameWork)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.intelligenceWork)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.intelligenceWork)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nameDocument)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nameDocument)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.numberDocument)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.numberDocument)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Worker)
